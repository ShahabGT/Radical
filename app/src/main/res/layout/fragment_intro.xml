<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.IntroFragment"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:gravity="center"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"

        app:cardBackgroundColor="@color/yellow"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:padding="16dp"

    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/intro_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="16:10"
        android:layout_width="250dp"
        android:layout_height="0dp" />

    <TextView
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:id="@+id/intro_title"
        android:fontFamily="@font/vazir"
        android:layout_marginTop="12dp"
        style="@style/Base.TextAppearance.AppCompat.Title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/intro_logo"
        android:layout_width="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_height="wrap_content"
        android:text="عنوان" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/intro_message"
        android:text="متن"
        android:gravity="center"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/intro_title"
        app:layout_constraintBottom_toTopOf="@id/intro_btn"
        android:layout_marginTop="16dp"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:fontFamily="@font/vazir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <com.google.android.material.button.MaterialButton
        android:visibility="gone"
        android:id="@+id/intro_btn"
        android:fontFamily="@font/vazir"
        android:text="بزن بریم!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/intro_message"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>